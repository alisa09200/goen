<h1>予約する</h1>

<%= form_with(model: [@tweet, @reservation], local: true) do |form| %>

  <div class="name">
    <%= form.label :name %>
    <%= current_user.nickname %>
  </div>

    <div class="time">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>


  <div class="submit">
    <%= form.submit %>
  </div>

<% end %>